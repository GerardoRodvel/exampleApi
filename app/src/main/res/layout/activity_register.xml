<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".register">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txt_correo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/txt_password"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="50dp"
        android:background="#11000000"
        android:drawableRight="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txt_nombre"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/txt_password"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="136dp"
        android:background="#11000000"
        android:drawableRight="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/txt_logearse"
        android:layout_alignStart="@+id/txt_correo"
        android:layout_alignLeft="@+id/txt_correo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="160dp"
        android:background="#11000000"
        android:drawableRight="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="184dp"
        android:layout_height="39dp"
        android:layout_above="@+id/txt_logearse"
        android:layout_alignParentStart="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="89dp"
        android:background="@drawable/button_background"
        android:text="REGISTRAR"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_logearse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="Tengo una cuenta" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/linearLayout"/>

</RelativeLayout>